{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "babel"
    ],
    "extends": "airbnb",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
    },
    "rules": {
      "react/prefer-stateless-function": 0,
      "class-methods-use-this": 0,
      "comma-dangle": ["error", "always-multiline", {"functions": "never"}]
    }
}
